
div.navbar.navbar-tide.navbar-trans.navbar-fixed-top(ng-controller='NavbarCtrl')
	div.container
		div.navbar-header
			button.navbar-toggle(type='button', ng-click='isCollapsed = !isCollapsed')
				span.sr-only Toggle navigation
				span.icon-bar
				span.icon-bar
				span.icon-bar
			a.navbar-brand(href='/') iTaiwanTour

		div#navbar-main.navbar-collapse.collapse(collapse='isCollapsed')
			ul.nav.navbar-nav

			div.nav.navbar-nav.navbar-right
				div.comp.pull-left(ng-hide='isLoggedIn()', ng-class='{active: isActive("/signup")}')
					a(href='/signup') Sign up

				div.comp.pull-right(ng-hide='isLoggedIn()', ng-class='{active: isActive("/login")}')
					a(href='/login') Login

				div.comp.pull-left(ng-show='isLoggedIn()')
					img.img-circle(src='../assets/images/me.jpg') 

				div.comp.pull-right(ng-show='isLoggedIn()', ng-class='{active: isActive("/settings")}')
					a(href='/settings')
						span.glyphicon.glyphicon-cog

				div.comp.pull-right(ng-show='isLoggedIn()', ng-class='{active: isActive("/logout")}')
					a(href='', ng-click='logout()') Logout
				div.comp.pull-right
					a.text-white(href='/')
						div.inbox-icon-container.text-center
							i.fa.fa-envelope-o.fa-2x
								span.text-hide.hide inbox
							i.alert-count.text-center.fade 0

				div.comp.dropdown.pull-right
					a.dropdown-toggle(href='#', data-toggle='dropdown', role='button', aria-expanded='false') Help
						span.caret

					ul.dropdown-menu(role='menu')
						li
							a(href='#') Help Topic 1
						li
							a(href='#') Help Topic 2
