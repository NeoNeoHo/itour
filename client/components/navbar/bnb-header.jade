
div.navbar.navbar-tide.navbar-trans.navbar-fixed-top(ng-controller='NavbarCtrl')
	div.container
		div.navbar-header
			button.navbar-toggle(type='button', ng-click='isCollapsed = !isCollapsed')
				span.sr-only Toggle navigation
				span.icon-bar
				span.icon-bar
				span.icon-bar
			a.navbar-brand(href='/') iTaiwanTour

		div#navbar-main.navbar-collapse.collapse(collapse='isCollapsed')
			ul.nav.navbar-nav

			ul.nav.navbar-nav.navbar-right
				li(ng-hide='isLoggedIn()', ng-class='{active: isActive("/signup")}')
					a(href='/signup') Sign up

				li(ng-hide='isLoggedIn()', ng-class='{active: isActive("/login")}')
					a(href='/login') Login

				li(ng-show='isLoggedIn()')
					p.navbar-text Welcome {{ getCurrentUser().name }}

				li(ng-show='isLoggedIn()', ng-class='{active: isActive("/settings")}')
					a(href='/settings')
						span.glyphicon.glyphicon-cog

				li(ng-show='isLoggedIn()', ng-class='{active: isActive("/logout")}')
					a(href='', ng-click='logout()') Logout
				li.comp.pull-right
					a.no-crawl.text-white
						div.inbox-icon-container.text-center
							i.fa.fa-envelope-o.h3.icon-pos--lower.icon-white
								span.text-hide.hide inbox
							i.alert-count.text-center.fade 0

				li.dropdown
					a.dropdown-toggle(href='#', data-toggle='dropdown', role='button', aria-expanded='false') Help
						span.caret

					ul.dropdown-menu(role='menu')
						li
							a(href='#') Help Topic 1
						li
							a(href='#') Help Topic 2
